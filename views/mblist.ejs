<%- include('parts/html_head.ejs') %>
<%- include('parts/html_topbar.ejs') %>

<div class="container" style="min-height:900px">
    <div class="col col-lg-10">
        <% if(locals.listInfo){ %>
            <div class="alert alert-<%= listInfo.type %>" role="alert">
                <%= listInfo.text %>
            </div>

        <% } %>

        <table class="table table-striped" style="background: linear-gradient(rgb(255, 211, 146),rgba(199, 106, 0, 0.541));
        ">

            <thead>
                <tr>
                    <th scope="col">刪除</th>
                    <th scope="col">Id</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Year</th>
                    <th scope="col">Month</th>
                    <th scope="col">Day</th>
                    <th scope="col">PsnId</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">編輯</th>
                </tr>
            </thead>

            <tbody>
                <% for(let i in rows){ %>
                <tr>
                    <td scope="row">
                        <a href="javascript:delete_one(<%= rows[i].id %>)">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                    <td scope="row"><%= rows[i].id %></td>
                    <td scope="row"><%= rows[i].first_name %></td>
                    <td scope="row"><%= rows[i].last_name %></td>
                    <td scope="row"><%= rows[i].gender %></td>
                    <td scope="row"><%= rows[i].yearlist1 %></td>
                    <td scope="row"><%= rows[i].monthlist1 %></td>
                    <td scope="row"><%= rows[i].daylist1 %></td>
                    <td scope="row"><%= rows[i].psnid %></td>
                    <td scope="row"><%= rows[i].email %></td>
                    <td scope="row"><%= rows[i].mobilenum %></td>
                    <td>
                        <a href="/pnform/edit/<%= rows[i].id %>">
                            <i class="fas fa-hammer"></i>
                        </a>
                    </td>
                </tr>
                <% } %>
            </tbody>

        </table>
        <script>
            function delete_one(id) {
                if (confirm(`是否刪除整筆編號 ${id} 的資料?`)) {
                    location.href = '/pnform/mblist/remove/' + id;
                    // setTimeout(myfunction(),3000);
                } else {
                    location.href = '/pnform/mblist';
                }
            }
        </script>
    </div>
</div>


<%- include('parts/html_foot') %>